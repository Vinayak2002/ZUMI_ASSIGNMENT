<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="177dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/enter_mobile_number"
            android:textColor="#3545D7"
            android:textSize="25sp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto"
            android:text="@string/linked_to_your_bank_account"
            android:textColor="#AAA5A5"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/container">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto"
                android:text="@string/_91"
                android:textColor="#1E1E1E "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/mobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:autofillHints="phone"
                android:background="@null"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHint="#AAA5A5"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            >

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/box"
                android:button="@drawable/custom_checkbox"
                android:foreground="@drawable/custom_checkbox"
                android:textColor="#FEFEFE"
                app:buttonIcon="@drawable/custom_checkbox" />

            <TextView
                android:id="@+id/i_agree_to_"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:lineSpacingExtra="7sp"
                android:text="@string/i_agree_to_"
                android:textColor="#1E1E1E"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/terms"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="3dp"
            android:text="@string/terms"
            android:textColor="#AAA5A5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/read"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="@string/read_less"
            android:textColor="#3545D7"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/score_powered_by"
            android:textColor="#AAA5A5"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/container"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="0px"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@string/get_otp"
                android:textColor="#7B7575"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>